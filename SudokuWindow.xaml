<Window x:Class="MyApp.SudokuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sudoku" Height="550" Width="600" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <DockPanel Margin="10">
        <!-- Заголовок -->
        <TextBlock Text="Судоку" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,10" DockPanel.Dock="Top"/>

        <StackPanel Orientation="Horizontal">
            <!-- Сетка Sudoku -->
            <Grid x:Name="SudokuGrid" Margin="10"/>

            <!-- Кнопки справа -->
            <StackPanel Orientation="Vertical" VerticalAlignment="Top" Margin="10,0,0,0">
                <Button Content="Проверить" Click="CheckSudoku_Click" Padding="5,3" Margin="0,0,0,5" Width="100"/>
                <Button Content="Очистить" Click="ClearSudoku_Click" Padding="5,3" Margin="0,0,0,5" Width="100"/>
                <Button Content="Новая игра" Click="NewGame_Click" Padding="5,3" Margin="0,0,0,5" Width="100"/>
                <Button Content="Выход" Click="BackToMain_Click" Padding="5,3" Margin="0,0,0,5" Width="100"/>
                <TextBlock x:Name="ResultText" FontSize="14" FontWeight="Bold" TextWrapping="Wrap" Width="120" Margin="0,10,0,0"/>
            </StackPanel>
        </StackPanel>
    </DockPanel>
</Window>
