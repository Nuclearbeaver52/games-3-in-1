<Window x:Class="MyApp.SecretGamesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Секретные игры" Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">

            <TextBlock Text="Секретные игры" FontSize="26" FontWeight="Bold" Foreground="White"
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Игры -->
            <Button Content="Змейка" Width="220" Height="50" Margin="0,5"
                    Background="#FF39A2DB" Foreground="White" FontWeight="SemiBold"
                    Click="OpenSnake_Click"/>

            <Button Content="Марио" Width="220" Height="50" Margin="0,5"
                    Background="#FFFFC107" Foreground="Black" FontWeight="SemiBold"
                    Click="OpenMario_Click"/>

            <Button Content="Пин-Понг" Width="220" Height="50" Margin="0,5"
                    Background="#FF4CAF50" Foreground="White" FontWeight="SemiBold"
                    Click="OpenPingPong_Click"/>

            <Button Content="Тетрис" Width="220" Height="50" Margin="0,5"
                    Background="#FFE91E63" Foreground="White" FontWeight="SemiBold"
                    Click="OpenTetris_Click"/>
            <Button Content="Пакман" Width="220" Height="50" Margin="0,5"
        Background="#FFFF5722" Foreground="White" FontWeight="SemiBold"
        Click="OpenPacman_Click"/>
            <!-- Новые игры -->
            <Button Content="Flappy Bird" Width="220" Height="50" Margin="0,5"
                        Background="#FF00BCD4" Foreground="White" FontWeight="SemiBold"
                        Click="OpenFlappyBird_Click"/>

            <Button Content="Сапер" Width="220" Height="50" Margin="0,5"
                        Background="#FF8BC34A" Foreground="White" FontWeight="SemiBold"
                        Click="OpenMinesweeper_Click"/>


            <Button Content="Закрыть" Width="120" Height="40" Margin="0,20,0,0"
                    Background="#FF9E9E9E" Foreground="White" Click="Close_Click"/>
            
            
            
        </StackPanel>
    </Grid>
</Window>
