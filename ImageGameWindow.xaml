<Window x:Class="MyApp.MoleGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Игра Крот" Height="500" Width="550" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <DockPanel Margin="10">

        <!-- Панель с очками и таймером -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <TextBlock Text="Очки: " FontSize="16" FontWeight="Bold"/>
            <TextBlock x:Name="ScoreText" Text="0" FontSize="16" FontWeight="Bold" Margin="0,0,20,0"/>
            <TextBlock Text="Время: " FontSize="16" FontWeight="Bold"/>
            <TextBlock x:Name="TimerText" Text="60" FontSize="16" FontWeight="Bold"/>
        </StackPanel>

        <!-- Сетка 3x3 -->
        <UniformGrid x:Name="GameGrid" Rows="3" Columns="3" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Height="36" Width="178">
            <Button Content="Начать" Click="StartButton_Click" Padding="10,5" Margin="5"/>
            <Button Content="Выход" Click="ExitButton_Click" Padding="10,5" Margin="5"/>
        </StackPanel>

        <!-- Кнопки -->
    </DockPanel>
</Window>
