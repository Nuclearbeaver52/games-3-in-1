<Window x:Class="MyApp.CrosswordWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CrosswordWindow" Height="720" Width="980" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="320"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Кроссворд (вводите только русские заглавные буквы)"
                   Grid.ColumnSpan="2" FontSize="20" FontWeight="Bold" Margin="0 0 0 10"/>

        <!-- Игровое поле -->
        <UniformGrid x:Name="Board" Grid.Row="1" Rows="10" Columns="10" Margin="5"/>

        <!-- Подсказки -->
        <StackPanel Grid.Column="1" Grid.Row="1" Margin="12,0,0,0">
            <TextBlock Text="Подсказки:" FontWeight="Bold" FontSize="16" Margin="0 0 0 6"/>
            <ItemsControl x:Name="Clues" />
            <Separator Margin="0 8 0 8"/>
            <TextBlock x:Name="Status" Foreground="Blue"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Проверить" Margin="5" Width="120" Click="Check_Click"/>
            <Button Content="Очистить" Margin="5" Width="120" Click="Clear_Click"/>
            <Button Content="Меню" Margin="5" Width="120" Click="Back_Click"/>
        </StackPanel>
    </Grid>
</Window>